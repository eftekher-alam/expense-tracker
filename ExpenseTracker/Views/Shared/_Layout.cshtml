<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ExpenseTracker</title>
    <environment include="Development">
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <style>
            body {
                padding-top: 70px;
                background-color: #015B42;
            }
        </style>
        @await RenderSectionAsync("styles", false)
    </environment>
</head>
<body>
    <nav class="navbar navbar-dark navbar-expand-md fixed-top shadow-lg p-2 mb-3 rounded border-bottom-0" style="background-color: #0D644E;">
        <div class="container-fluid" style="color: white">
            <span class="navbar-brand">ExpenseTracker</span>
            <div class="navbar-collapse collapse" style="color: white;">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Category" asp-action="Index">Category</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Expense" asp-action="Index">Expense</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid" style="min-height:calc(100vh - 140px)">
        @RenderBody()
    </div>
    <footer class="container text-white">
        &copy;@DateTime.Now.Year - Md. Eftekher Alam
    </footer>
    @await RenderSectionAsync("scripts", false)
</body>
</html>