@model ExpenseTracker.Models.Expense
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-12">
        <div style="margin: 0 auto;padding-top: 30px; position: relative;">
            <div class="card p-lg-3 shadow-lg p-3 mb-5 rounded " style="margin-left: auto; margin-right: auto; width: 40%; background-color: #FEFEFE; color: #015B42 ">
                <h3 class="text-center">Delete Category</h3><hr />

                <div class="form-group row mb-3">
                    <label asp-for="Category.CategoryName" class="col-form-label col-4"></label>
                    <div class="col-4 pt-2">
                        <label>@Model.Category.CategoryName</label>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="Date" class="col-form-label col-4"></label>
                    <div class="col-4 pt-2">
                        <label>@Model.Date.ToString("yyyy-MM-dd")</label>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="Ammount" class="col-form-label col-4"></label>
                    <div class="col-4 pt-2">
                        <label>@Model.Ammount</label>
                    </div>
                </div>

                <form method="post" asp-action="Delete" asp-controller="Expense" asp-route-CategoryId="@Model.ExpenseId">
                    <div class="text-center">
                        <button type="submit" class="btn btn-danger">Confirm Delete</button>
                        <a asp-action="Index" asp-controller="Expense" class="btn btn-success">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>